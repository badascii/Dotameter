.hero-listing.page{"ng-controller" => "heroCtrl"}
  .content
    .content-inner-border
      .row.hero-header
        .row
          Character Name
        .row
          Attack types, roles
      .row.hero-filter
        filter by role, Attack Type, By Name
      .heroes
        .row
          .large-4.columns
            .row
              %b
                %h1
                  Strength
              %h2
                Radiant
              %div{"ng-repeat" => "hero in radiantStr"}
                .hero-icons
                  %img{:alt => "{{hero.name}}", :src => "{{hero.icon}}"}
                  %a{"ng-href" => "{{hero.url}}", "ng-mouseover" => "showCharDetails()"}{{hero.name}}
