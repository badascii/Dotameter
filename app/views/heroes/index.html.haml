.hero-listing.page{"ng-controller" => "heroIndexCtrl"}
  .content
    .content-inner-border
      .row.hero-header
        .row
          %h1
            {{characterName}}
        .row
          %p
            Attack types, roles
      .row.hero-filter
        filter by role, Attack Type, By Name
      .heroes
        // RADIANT
        .row
          .large-4.columns
            %b
              %img{:src => "assets/style_images/overviewicon_str.png"}
              %h1
                Strength
            %div{"ng-repeat" => "subArray in radiantStr"}
              .row
                .custom-column-4{"ng-repeat" => "hero in subArray"}
                  .hero-icons
                    %img{:alt => "{{hero.name}}", :src => "{{hero.icon}}", "ng-mouseover" => "toggleCharDetails($event)", "ng-mouseout" => "toggleCharDetails($event)", "data-heroName" => "{{hero.name}}", "data-heroUrl" => "{{hero.url}}", "ng-click" => "showHero($event)"}
